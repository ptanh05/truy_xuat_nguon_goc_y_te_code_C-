@model PharmaDNA.Web.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center">
                <div class="error-template">
                    <h1 class="display-1 text-danger">Oops!</h1>
                    <h2 class="mb-4">@(Model?.StatusCode ?? 500)</h2>
                    <div class="error-details mb-4">
                        <h4>@(Model?.Message ?? "Đã xảy ra lỗi không mong muốn")</h4>
                        @if (Model?.ShowRequestId == true)
                        {
                            <p class="text-muted">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                    </div>
                    <div class="error-actions">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i> Về trang chủ
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-template {
    padding: 40px 15px;
    text-align: center;
}

.error-actions {
    margin-top: 15px;
    margin-bottom: 15px;
}

.error-actions .btn {
    margin-right: 10px;
}

.error-details {
    color: #6c757d;
}
</style>
