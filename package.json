{
  "name": "pharmadna-fullstack",
  "version": "1.0.0",
  "description": "PharmaDNA - Truy xuất nguồn gốc y tế",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && dotnet run",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && dotnet build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm run install:frontend",
    "install:frontend": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["pharma", "blockchain", "nft", "supply-chain"],
  "author": "PharmaDNA Team",
  "license": "MIT"
}
