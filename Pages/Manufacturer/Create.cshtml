@page
@model ManufacturerCreateModel
@{
    ViewData["Title"] = "Tạo NFT Mới";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Tạo NFT Lô Thuốc Mới</h2>
            <form id="createNFTForm" enctype="multipart/form-data" class="mt-4">
                <div class="mb-3">
                    <label for="drugName" class="form-label">Tên Thuốc</label>
                    <input type="text" class="form-control" id="drugName" name="drugName" required>
                </div>

                <div class="mb-3">
                    <label for="batchNumber" class="form-label">Số Lô</label>
                    <input type="text" class="form-control" id="batchNumber" name="batchNumber" required>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="expiryDate" class="form-label">Ngày Hết Hạn</label>
                        <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="quantity" class="form-label">Số Lượng</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Mô Tả</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label for="manufacturerLocation" class="form-label">Địa Điểm Sản Xuất</label>
                    <input type="text" class="form-control" id="manufacturerLocation" name="manufacturerLocation" required>
                </div>

                <!-- Updated file upload section with progress tracking -->
                <div class="mb-3">
                    <label for="drugImage" class="form-label">Hình Ảnh Thuốc</label>
                    <input type="file" class="form-control" id="drugImage" name="drugImage" accept="image/*">
                    <div id="imageUploadProgress" class="progress mt-2" style="display: none;">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="certificate" class="form-label">Chứng Chỉ</label>
                    <input type="file" class="form-control" id="certificate" name="certificate" accept=".pdf,.doc,.docx">
                    <div id="certificateUploadProgress" class="progress mt-2" style="display: none;">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <div id="uploadStatus" class="alert alert-info" style="display: none;"></div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                        <i class="fas fa-plus"></i> Tạo NFT
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#createNFTForm').on('submit', async function(e) {
            e.preventDefault();
            
            const manufacturerAddress = localStorage.getItem('walletAddress');
            if (!manufacturerAddress) {
                alert('Vui lòng kết nối ví');
                return;
            }

            $('#submitBtn').prop('disabled', true);
            $('#uploadStatus').show().html('Đang tải lên tệp...');

            try {
                // Upload files to IPFS
                let imageHash = null;
                let certificateHash = null;

                const drugImage = document.getElementById('drugImage').files[0];
                if (drugImage) {
                    imageHash = await uploadFileToIPFS(drugImage, 'drugImage');
                }

                const certificate = document.getElementById('certificate').files[0];
                if (certificate) {
                    certificateHash = await uploadFileToIPFS(certificate, 'certificate');
                }

                // Create NFT with IPFS hashes
                const formData = new FormData();
                formData.append('drugName', $('#drugName').val());
                formData.append('batchNumber', $('#batchNumber').val());
                formData.append('manufacturerAddress', manufacturerAddress);
                formData.append('manufacturerLocation', $('#manufacturerLocation').val());
                formData.append('expiryDate', $('#expiryDate').val());
                formData.append('quantity', $('#quantity').val());
                formData.append('description', $('#description').val());

                // Add IPFS hashes as metadata
                if (imageHash) formData.append('imageHash', imageHash);
                if (certificateHash) formData.append('certificateHash', certificateHash);

                $('#uploadStatus').html('Đang tạo NFT...');

                $.ajax({
                    url: '/api/manufacturer',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            $('#uploadStatus').removeClass('alert-info').addClass('alert-success')
                                .html('Tạo NFT thành công! Chuyển hướng...');
                            setTimeout(() => {
                                window.location.href = '/manufacturer';
                            }, 2000);
                        } else {
                            alert('Lỗi: ' + response.message);
                            $('#submitBtn').prop('disabled', false);
                        }
                    },
                    error: function() {
                        alert('Lỗi khi tạo NFT');
                        $('#submitBtn').prop('disabled', false);
                    }
                });
            } catch (error) {
                alert('Lỗi: ' + error.message);
                $('#submitBtn').prop('disabled', false);
            }
        });

        async function uploadFileToIPFS(file, fieldName) {
            return new Promise((resolve, reject) => {
                const formData = new FormData();
                formData.append('file', file);
                formData.append('metadata', JSON.stringify({
                    name: file.name,
                    type: fieldName
                }));

                const progressSelector = fieldName === 'drugImage' ? '#imageUploadProgress' : '#certificateUploadProgress';
                $(progressSelector).show();

                $.ajax({
                    url: '/api/ipfs/upload-file',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    xhr: function() {
                        const xhr = new window.XMLHttpRequest();
                        xhr.upload.addEventListener('progress', function(e) {
                            if (e.lengthComputable) {
                                const percentComplete = (e.loaded / e.total) * 100;
                                $(progressSelector + ' .progress-bar').css('width', percentComplete + '%');
                            }
                        }, false);
                        return xhr;
                    },
                    success: function(response) {
                        if (response.success) {
                            resolve(response.ipfsHash);
                        } else {
                            reject(new Error(response.message));
                        }
                    },
                    error: function() {
                        reject(new Error('Lỗi khi tải lên tệp'));
                    }
                });
            });
        }
    </script>
}
