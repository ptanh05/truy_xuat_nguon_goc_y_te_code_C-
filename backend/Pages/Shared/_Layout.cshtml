<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmaDNA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-pills"></i> PharmaDNA
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/manufacturer">Nhà Sản Xuất</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/distributor">Nhà Phân Phối</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pharmacy">Nhà Thuốc</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Quản Trị</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle"></i> <span id="userMenuText">Tài Khoản</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" href="/profile">Hồ Sơ</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#" id="logoutLink">Đăng Xuất</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-4 mt-5">
        <div class="container">
            <p>&copy; 2025 PharmaDNA - Hệ Thống Truy Xuất Nguồn Gốc Thuốc</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script src="~/js/web3-integration.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        document.getElementById('logoutLink').addEventListener('click', function(e) {
            e.preventDefault();
            $.ajax({
                url: '/api/auth/logout',
                method: 'POST',
                success: function() {
                    localStorage.removeItem('walletAddress');
                    window.location.href = '/login';
                }
            });
        });

        // Update user menu with wallet address
        const walletAddress = localStorage.getItem('walletAddress');
        if (walletAddress) {
            document.getElementById('userMenuText').textContent = 
                walletAddress.substring(0, 6) + '...' + walletAddress.substring(38);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
